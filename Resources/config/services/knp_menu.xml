<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
	<parameters>
		<parameter key="asf_website.menu_builder.class">ASF\WebsiteBundle\Menu\MenuBuilder</parameter>
		<parameter key="asf_website.menu.subscriber.class">ASF\WebsiteBundle\Event\MenuSubscriber</parameter>
	</parameters>
	 
	<services>
        <service id="asf_website.menu_builder" class="%asf_website.menu_builder.class%">
        	<argument type="service" id="knp_menu.factory" />
        	<argument type="service" id="event_dispatcher" />
        	<argument type="service" id="request_stack" />
            <tag name="knp_menu.menu_builder" method="createPrimaryMenu" alias="primary_menu" />
        </service>
        
        <service id="asf_website.menu.subscriber" class="%asf_website.menu.subscriber.class%">
        	<argument type="service" id="request_stack" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="asf_document.page.manager" />
        	<argument type="service" id="asf_document.post.manager" />
        	<tag name="kernel.event_subscriber" />
        </service>
	</services>
	
</container>