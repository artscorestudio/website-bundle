{% extends "ASFWebsiteBundle::backend_layout.html.twig" %}

{% trans_default_domain 'asf_website' %}

{% block heading %}
<div class="jumbotron">
	<h1>{% block heading_title %}Menu Builder Manager{% endblock %}</h1>
	<p class="lead">{% block heading_lead %}This section is for manager items in your website menus.{% endblock %}</p>
	{% block heading_action_btn %}{% endblock %}
</div>
{% endblock %}

{% block content %}
<div class="row marketing">
	<div class="col-xs-6 col-sm-3 placeholder">
		<h4>Primary Menu</h4>
		<span class="text-muted">This is the primary menu of the website.</span>
		<a href="{{ path('asf_website_menu_edit', {id: 'primary-menu'}) }}" class="btn btn-primary">{{ 'Manage'|trans }}</a>
	</div>
</div>
{% endblock %}